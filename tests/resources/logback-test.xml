<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%thread] %-5level %logger{50} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="debug">
        <appender-ref ref="STDOUT" />
    </root>

    <logger name="game" level="OFF" />
    <logger name="org.deeplearning4j" level="OFF" />
    <logger name="org.datavec" level="OFF" />
    <logger name="org.nd4j" level="OFF" />

</configuration>
